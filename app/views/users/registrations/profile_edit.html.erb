<%= form_for current_user, url: {action: 'profile_update'} do |f| %>
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :avatar %><br />
    <%= f.file_field :avatar %>
  </div>
  <div>
    <%= f.label :self_introduction %><br />
    <%= f.text_area  :self_introduction %>
  </div>
  <div class="actions">
    <%= f.submit "Update" %>
  </div>
<% end %>

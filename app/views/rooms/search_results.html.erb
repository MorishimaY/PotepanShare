<h1>検索結果</h1>
<p>合計：<%= @rooms.count %>件</p>
<div class="row">
  <% @rooms.each do |room| %>
    <div class="col-md-4">
      <div class="card">
        <img class="card-img-top room_image" src="<%= room.room_image.url %>" alt="施設画像">
        <div class="card-body">
          <h5 class="card-title"><%= link_to room.name, room %></h5>
          <p class="card-text"><%= room.address %></p>
          <p class="card-text"><%= room.detail %></p>
          <p class="card-text">宿泊料金：<%= room.price %>円/日</p>
        </div>
      </div>
    </div>
  <% end %>
</div>
